<!-- views/chat.handlebars -->
<html>
<head>
  <title>Chat</title>
</head>
<body>
  <h1>Chat</h1>
  <ul>
    {{#each messages}}
      <li>{{user}}: {{message}}</li>
    {{/each}}
  </ul>
  <form method="post" action="/addMessage">
    <input type="text" name="user" placeholder="Usuario" required>
    <input type="text" name="message" placeholder="Mensaje" required>
    <button type="submit">Enviar</button>
  </form>
</body>
</html>